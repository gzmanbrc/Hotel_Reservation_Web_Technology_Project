@model EntityLayer.Entities.RoomType

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h1 class="bg-success text-white text-center border my-5 shadow">Delete</h1>

<div class="row">
    <div class="col-md-6 offset-md-3 border p-3 shadow">
        <form asp-action="Delete" asp-controller="RoomType" method="post">

            <div class="form-group row">
                <input type="hidden" asp-for="RoomTypeId" />
                <label for="RoomName" class="col-4 col-form-label">Room Type</label>
                <div class="col-8">
                    <input id="RoomName" asp-for="RoomName" disabled type="text" class="form-control border shadow" />
                </div>
            </div>

            <div class="form-group row mt-3">
                <label for="RoomPrice" class="col-4 col-form-label">Room Price</label>
                <div class="col-8">
                    <input id="RoomPrice" asp-for="RoomPrice" disabled type="number" class="form-control border shadow" />
                </div>
            </div>

            <div class="form-group row mt-3">
                <div class="col-8 offset-4">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-primary">Cancel</a>
                </div>
            </div>

        </form>
    </div>
</div>

