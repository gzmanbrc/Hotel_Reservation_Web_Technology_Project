@model IEnumerable<EntityLayer.Entities.RoomType>

@{
    ViewData["Title"] = "Room Types and Prices";
}

<div class="container mt-5" style="background-color:#f5f8fa; min-height:100vh; font-family:'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;">
    <h1 class="text-center mb-5 p-3 rounded" style="background:#24416B; color:white;">Room Types and Prices</h1>
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow rounded">
                <div class="card-body">
                    <table class="table table-bordered table-hover mb-0">
                        <thead class="table-dark">
                            <tr>
                                <th>Room Type</th>
                                <th>Price</th>
                                <th>Reservation</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var roomType in Model)
                            {
                                <tr>
                                    <td>@roomType.RoomName</td>
                                    <td>@($"{roomType.RoomPrice:C}")</td>
                                    <td>
                                        <a href="@Url.Action("Book", "Reservation", new { id = roomType.RoomTypeId })" class="btn btn-success" style="min-width:140px;">Book Now</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table th, .table td {
            vertical-align: middle;
            text-align: center;
        }
        .btn-success {
            min-width: 140px;
        }
    </style>
} 