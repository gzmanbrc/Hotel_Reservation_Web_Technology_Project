@model EntityLayer.Entities.User
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<div class="login-container">
    <h2 class="login-title">Gizelya Hotel Login</h2>
    <form asp-action="Login" method="post" class="login-form">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" id="email" name="email" required placeholder="Enter your email" />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" required placeholder="Enter your password" />
        </div>
        <div class="login-buttons">
            <button type="submit" class="login-btn user-btn">Continue as User</button>
            <button type="submit" name="role" value="admin" class="login-btn admin-btn">Continue as Admin</button>
        </div>
    </form>

    @if (ViewBag.Error != null)
    { }